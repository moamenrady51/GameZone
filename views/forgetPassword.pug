doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Forgot Password
    style.
        body{
            background-image: url('./../img/back.jpeg');
            background-repeat: no-repeat;
            background-size: cover;
            font-family: Arial, sans-serif;
        }

        .header {
            display: flex;
            justify-content: center;
            background-color: #444444;
            width:90%;
            margin:auto
        }

        .logo {
            height: 70px;
        }

        .section {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .box {
            background-color: #444444; /* Slightly transparent white */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 600px; /* Fixed width */
            height: 300px; /* Fixed width */
            text-align: center;
        }

        p{
            color: ;
        }
        h2 {
            margin-bottom: 20px;
            color: white;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: white;
        }

        input[type="email"] {
            width: 90%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .submitBtn {
            width: 60%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: rgb(238, 255, 7 ,0.7);
            color: black;
            margin-top : 20px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .submitBtn:hover {
            background-color: rgba(151, 187, 20, 0.8); /* Darker on hover */
        }

        .message {
            margin-top: 15px;
            color: rgb(151, 187, 20);
        }

    // Link to CSS
  body
    header.header
      a(href="/")
        img.logo(src="img/logo5.png", alt="Logo")
    section.section
      .box
        h2 Forgot Password
        p Please enter your email address below to receive a password reset link.
        form#forgotPasswordForm
          .form-group
            label(for="email") Email:
            input#email(type="email", name="email", required)
          button.submitBtn(type="submit") Send Reset Link
        p#message.message
    script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.7/axios.min.js")
    
    script(src="js/forgotPassword.js")
    // Link to JS
